<p id="notice"><%= notice %></p>

<h1>Events</h1>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <div class="table title">
    <h3 class="title">Upcoming Events</h3>
  </div>
  <tbody>
    <% @events.future.each do |event| %>
      
      <tr>
        <td>  <%= event.title %> <td>
        <% unless event.attendees.include?(current_user)%> 
          <td> <%= render 'event_attendances/form', event: event, event_attendance: @event_attendances %>
        <%end%>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<hr class="index_line">
<br>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <div class="table title">
    <h3 class="title">Past Events</h3>
  </div>
  <tbody>
    <% @events.past.each do |event| %>
      
      <tr>
        <td>  <%= event.title %> <td>
        <% unless event.attendees.include?(current_user)%> 
          <td> <%= render 'event_attendances/form', event: event, event_attendance: @event_attendances %>
        <%end%>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

